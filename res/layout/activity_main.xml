<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/furley_bg"
    android:orientation="vertical"
    tools:context=".MainActivity" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <Button
            android:id="@+id/readSmsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="readSms"
            android:text="@string/read_sms" />
        
    </LinearLayout>
        
    <ListView
        android:id="@+id/shoppingList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent" />
     
    <Button
        android:id="@+id/lockCurrentListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="lockCurrentList"
        android:text="@string/adding_done" />
    
     <Button
        android:id="@+id/clearCurrentListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clearCurrentList"
        android:text="@string/clear_current_shopping_list" />

     <EditText
         android:id="@+id/hiddenText"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:ems="10"
         android:inputType="none"
         android:visibility="gone" />

</LinearLayout>